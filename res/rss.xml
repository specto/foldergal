{{ define "atom" }}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .SiteTitle }}</title>
  <link rel="self" type="application/atom+xml" href="{{ .FeedUrl }}" />
  <id>{{ .SiteUrl }}</id>
  <updated>{{ .LastDate }}</updated>

  {{ range .Items }}
  <entry>
	<title>{{ .Title }}</title>
	<link href="{{ .Url }}" />
	<id>{{ .Id }}</id>
	<published>{{ .Date }}</published>
	<updated>{{ .Date }}</updated>
	<content><![CDATA[
		{{ if eq .Type "image" }}
	    <img src="{{ .Url }}" />
	    {{ else }}
	    <a href="{{ .Url }}"><img src="{{ .Thumb }}" /></a>
	    {{ end }}
	]]></content>
  </entry>
  {{ end }}
</feed>
{{ end }}


{{ define "rss" }}

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
<channel>
<title>{{ .SiteTitle }}</title>
<link>{{ .SiteUrl }}</link>
<lastBuildDate>{{ .LastDate }}</lastBuildDate>

{{ range .Items }}
<item>
	<title>{{ .Title }}</title>
	<link>{{ .Url }}</link>
	<guid>{{ .Id }}</guid>
	<description><![CDATA[
	    {{ if eq .Type "image" }}
	    <img src="{{ .Url }}" />
	    {{ else }}
	    <a href="{{ .Url }}"><img src="{{ .Thumb }}" /></a>
	    {{ end }}
	]]></description>
	<pubDate>{{ .Date }}</pubDate>
</item>
{{ end }}

</channel>
</rss>

{{ end }}
